<%- include('./partials/header') %>
<main>
<div class="page-title"><%= title %> on <%= visit.date.toLocaleDateString() %></div>
<form id="newVisit" action="/visits/<%= visit._id %>?_method=PUT" method="POST">
    <label for="date">Change Date of Visit:
        <input id="date" 
        type="date" 
        name="date" 
        value="<%= visit.date.toISOString().slice(0, 10) %>"
        required>
    </label>
    <button class="add" type="submit">Update</button>
</form>
<a class="link" href="/visits">Return to My Visits List</a>
</main>
<%- include('./partials/footer') %>