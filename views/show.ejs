<%- include('./partials/header') %>
<main id="visit-show">
    <div class="page-title">
        <%= user.name %>'s <%= title %> National Park
    </div>
    <div>
        <p>
            Date Visited: <%= visit.date.toLocaleDateString() %><br>
            Junior Ranger Badge <%= visit.jrRangerBadge ? 'Obtained' : 'Not Obtained' %><br>
            <% if (visit.jrRangerBadge) { %>
                Date Badge Obtained: <%= visit.jrRangerBadge.date.toLocaleDateString() %>
            <% } %><br><br>
        </p>
    </div>
    <div>
        <a class="edit" href="/visits/<%= visit._id %>/edit">Edit This Visit</a>
        <a class="edit" href="/">Add a Junior Badge to This Visit</a>
    </div>
    <form action="/visits/<%= visit._id %>?_method=DELETE" method="POST">
        <button class="delete" type="submit">Delete This Visit</button>
    </form>
    <a class="link" href="/visits">Return to My Visits List</a>
</main>
<%- include('./partials/footer') %>